{
 "name": "UMKC",
 "version": "2.0.0",
 "description": "Starting point for all web projects",
 "main": "",
 "scripts": {
  "scss": "sass --source-map src/scss:assets/css",
  "js": "browserify src/js/main.js > assets/js/main.js",
  "lint:css" : "stylelint \"src/**/*.scss\" -o \"stylelint.log\" --fix; exit 0;",
  "serve": "browser-sync start --files 'assets, **/*.php' -p 'umkc-web.lndo.site' --no-open --port 3000",
  "watch:js": "onchange 'src/js' -- npm run js",
  "watch:css": "onchange 'src/scss' -- npm run scss",
  "start": "npm run js & npm run lint:css & npm run scss && run-p serve watch:css watch:js"
 },
 "author": "Greg McMullen @ UMKC",
 "license": "ISC",
 "devDependencies": {
  "browser-sync": "^2.26.12",
  "browserify": "^16.5.2",
  "npm-run-all": "^4.1.5",
  "onchange": "^7.0.2",
  "sass": "^1.50.0",
  "stylelint": "^14.9.1",
  "stylelint-config-standard-scss": "^5.0.0"
 }
}
